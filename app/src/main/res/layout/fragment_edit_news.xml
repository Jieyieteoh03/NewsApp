<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/m">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT NEWS"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/m"/>

            <ImageView
                android:id="@+id/uploadImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/xl"
                android:layout_marginHorizontal="@dimen/xxxxxl"
                android:src="@drawable/imgUpload"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxxxxl"
                android:paddingHorizontal="@dimen/xs"
                android:hint="Enter the News Title"
                android:background="@drawable/input_box"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="@dimen/xl"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:hint="Enter the description regarding the News here"
                android:background="@drawable/input_box" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:layout_marginTop="@dimen/xl"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etTags"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxxxxl"
                android:paddingHorizontal="@dimen/xs"
                android:hint="#tags"
                android:background="@drawable/input_box" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:layout_marginTop="@dimen/xl"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxxxxl"
                android:paddingHorizontal="@dimen/xs"
                android:spinnerMode="dropdown"
                android:background="@drawable/input_box" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                android:layout_marginTop="@dimen/xl"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etSource"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxxxxl"
                android:paddingHorizontal="@dimen/xs"
                android:hint="URL"
                android:background="@drawable/input_box"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textStyle="bold"
                android:backgroundTint="@color/blue"
                android:textSize="@dimen/l"
                android:layout_marginHorizontal="@dimen/xxxl"
                android:layout_marginVertical="@dimen/xxxl"/>


        </LinearLayout>

    </ScrollView>

</layout>