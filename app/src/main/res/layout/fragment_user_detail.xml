<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.Hilt_MainActivity">

    <data>
        <variable
            name="viewUserDetail"
            type="com.example.newsapp.ui.viewUserProfile.UserDetailViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rectangle"
            android:orientation="vertical"
            android:gravity="center"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:layout_marginVertical="@dimen/xxxxxl"
            android:layout_marginHorizontal="@dimen/m">

            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/cat1"
                app:imageByteArray="@{viewUserDetail.img}"
                />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="View User Details"
                android:textSize="@dimen/giant_text_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/m"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginHorizontal="@dimen/m"
                android:paddingVertical="@dimen/s"
                android:paddingStart="@dimen/xs"
                android:paddingEnd="@dimen/xs"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="@dimen/giant_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xxxxxl"
                    android:paddingHorizontal="@dimen/xs"
                    android:hint="User Name"
                    android:text="@={viewUserDetail.userName}"
                    android:background="@drawable/input_box"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginTop="@dimen/xl"
                    android:textSize="@dimen/giant_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xxxxxl"
                    android:paddingHorizontal="@dimen/xs"
                    android:hint="User Email"
                    android:text="@={viewUserDetail.email}"
                    android:background="@drawable/input_box"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:layout_marginTop="@dimen/xl"
                    android:textSize="@dimen/giant_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xxxxxl"
                    android:paddingHorizontal="@dimen/xs"
                    android:hint="User Phone Number"
                    android:text="@={viewUserDetail.phoneNumber}"
                    android:background="@drawable/input_box"/>


            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEditUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/fab_add"
                android:src="@drawable/ic_edit"
                android:layout_gravity="bottom|center"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView></layout>